<!DOCTYPE html>
<html lang="en"> 
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Transporter Home</title>
    <link rel="stylesheet" href="style.css" />
    <!-- Unicons --> 
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css" />
  </head>
  <body>
    <!-- Header -->
    <header class="header">
      <nav class="nav">
        <a href="#" class="nav_logo">Welcome, <%= users[0].name %></a>

        <h4 class="nav_logo">Transporter Site</h4>

        <ul class="nav_items"> 
          <li class="nav_item">
            <a href="/" class="nav_link">Home</a>
            <button class="button" id="form-open">Messages/Orders</button>
          </li>
        </ul>
      </nav>
    </header>

    <!-- Home -->
    <section class="home">
      <div class="form_container">
        <i class="uil uil-times form_close"></i>
        <!-- Login From -->
        <div class="form login_form">
            <form action="/trps" method="post">
              <h2>Create Message</h2>
  
                <div class="input_box">
                    <label for="transporter">Order ID:</label>
                        <select id="transporter" name="ids">
                            <option value="Select">
                                Select
                            </option>
                                <% 
                                    if(ids.length > 0){
                                        for(let i=0; i < ids.length; i++){
                                            %>
                                            <option value="<%= ids[i]['orderID'] %>"><%= ids[i]['orderID'] %></option>
                                            <%
                                        }
                                    }
                                %>
                        </select>
                </div>
  
  
              <div class="input_box">
                <input type="number" step="any" min="0" name="price" placeholder="Enter the price">
                <i class="uil uil-usd-circle email"></i>
              </div>

              <div class="input_box">
                <input type="text" id="message" name="message" placeholder="Write Message (if any)">
                <i class="uil uil-comment-dots email"></i>
              </div>

              <button class="button">Send Message</button>

              <div class="login_signup">Recieved Orders / Sent Message(s) <a href="#" id="signup"> Click Here </a></div>
            </form>
        </div>

        <!-- Signup From -->
        <div class="form signup_form">
          <form action="/signup" method="post">
            <h2>Messages</h2>

            <div class="input_box">
              <input type="text" id="search-input" placeholder="Search by Order ID">
              <i class="uil uil-search email"></i>
            </div>

            <br>

            <div id="message-list" >
                <% 
                    if(ids.length > 0){
                        for(let i=0; i < ids.length; i++){
                            %>
                                <h5>Order ID: <%= ids[i]['orderID'] %></h5>
                            <%
                        }
                    }
                %>
            </div>

            <br>
            
            <div id="message-details">
              <!-- <h2>Order Details</h2>
              <p id="Order-id"></p>
              <p id="To"></p>
              <p id="From"></p>
              <p id="Address"></p>
              <p id="content"></p> -->
            </div>

            <!-- <button class="button"></button> -->

            <div class="login_signup"> Create New Message <a href="#" id="login"> Click Here </a></div>
          </form>
        </div>
      </div>
    </section>

    <script src="script.js"></script>
  </body>
</html>
